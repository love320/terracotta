<tc:tc-config xmlns:tc="http://www.terracotta.org/config">

  <servers>
    <server name="localhost" host="localhost">
      <dso-port>9510</dso-port>
      <jmx-port>9520</jmx-port>
      <data>target/terracotta/data</data>
      <logs>target/terracotta/logs</logs>
    </server>
  </servers>

  <clients>
    <logs>target/terracotta/%(tc.nodeName)</logs>
    <modules>
      <!--
      <module name="clustered-ehcache-1.3" version="1.0.0"/>
      -->
    </modules>
  </clients>

  <application>
    <dso>
      <web-applications>
        <web-application>tc-maven-webapp</web-application>
      </web-applications>
      
      <locks>
        <autolock>
          <method-expression>* org.terracotta.maven.plugins.SomeClass.*.*(..)</method-expression>
          <lock-level>write</lock-level>
        </autolock>
      </locks>

      <instrumented-classes>
        <include>
          <class-expression>org.terracotta.maven.plugins.SomeClass</class-expression>
          <honor-transient>true</honor-transient>
        </include>
      </instrumented-classes>
    </dso>
  </application>

</tc:tc-config>
