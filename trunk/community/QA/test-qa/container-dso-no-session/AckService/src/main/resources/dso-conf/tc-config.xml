<?xml version="1.0" encoding="UTF-8"?>
<con:tc-config xmlns:con="http://www.terracottatech.com/config-v1">
  <system>
    <configuration-model>development</configuration-model>
    <dso-enabled>true</dso-enabled>
    <jdbc-enabled>false</jdbc-enabled>
  </system>
  <servers>
    <server name="localhost">
      <dso-port>9510</dso-port>
      <jmx-port>9520</jmx-port>
      <http-port>9515</http-port>
      <data>terracotta/server-data</data>
      <logs>terracotta/server-logs</logs>
    </server>
  </servers>
  <clients>
    <logs>terracotta/client-logs</logs>
    <dso>
      <debugging>
        <runtime-logging>
          <wait-notify-debug>false</wait-notify-debug>
          <distributed-method-debug>false</distributed-method-debug>
          <lock-debug>false</lock-debug>
          <new-object-debug>false</new-object-debug>
        </runtime-logging>
        <runtime-output-options>
          <auto-lock-details>false</auto-lock-details>
        </runtime-output-options>
      </debugging>
    </dso>
  </clients>
  <application>
    <dso>
      <instrumented-classes>
        <include>
          <class-expression>org.terracotta.qa.ack.AckService$AckProcessor</class-expression>
        </include>
        <include>
          <class-expression>org.terracotta.qa.ack.AckService$Request</class-expression>
        </include>
        <include>
          <class-expression>org.terracotta.qa.ack.AckService</class-expression>
        </include>
      </instrumented-classes>
      <locks>
        <autolock>
          <method-expression>void org.terracotta.qa.ack.AckService$AckProcessor.run()</method-expression>
          <lock-level>write</lock-level>
        </autolock>
        <autolock>
          <method-expression>void org.terracotta.qa.ack.AckService$Request.ack(java.lang.String)</method-expression>
          <lock-level>write</lock-level>
        </autolock>
        <autolock>
          <method-expression>java.lang.String org.terracotta.qa.ack.AckService$Request.acknowledger()</method-expression>
          <lock-level>write</lock-level>
        </autolock>
        <autolock>
          <method-expression>void org.terracotta.qa.ack.AckService$Request.waitForAck(long)</method-expression>
          <lock-level>write</lock-level>
        </autolock>
        <autolock>
          <method-expression>void org.terracotta.qa.ack.AckService.ack(org.terracotta.qa.ack.AckService$Request, long)</method-expression>
          <lock-level>write</lock-level>
        </autolock>
        <autolock>
          <method-expression>void org.terracotta.qa.ack.AckService.stop()</method-expression>
          <lock-level>write</lock-level>
        </autolock>
      </locks>
      <roots>
        <root>
          <field-name>org.terracotta.qa.ack.AckService.queue</field-name>
        </root>
      </roots>
    </dso>
  </application>
</con:tc-config>
