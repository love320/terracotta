<project name="WorkManager" default="build" basedir=".">
	<property name="src" location="src"/>
	<property name="build.dir" location="classes"/>

	<target name="init">
		<mkdir dir="${build.dir}"/>
	</target>

	<target name="build" depends="init" description="build the source ">
    <javac target="1.5" source="1.5"  srcdir="${src}" classpath="lib/commonj-twm.jar:lib/spring-2.0.jar" destdir="${build.dir}"/>
    <copy file="${src}/work-manager.xml" todir="${build.dir}" />
	</target>

	<target name="clean" description="clean up">
		<delete dir="${build.dir}"/>
	</target>
</project>
