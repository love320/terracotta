<project name="tc-inventory" default="build" basedir=".">

  <target name="init">
    <mkdir dir="target/classes"/>

    <path id="lib.dir">
      <fileset dir="lib">
        <include name="commons-logging-1.0.4.jar"/>
        <include name="spring-1.2.8.jar"/>
      </fileset>
    </path>
  </target>

  <target name="clean">
    <delete dir="target/classes"/>
    <delete file="target/inventory.jar"/>
  </target>

  <target name="build" depends="init">
    
    <javac srcdir="src/main/java" 
           classpathref="lib.dir" 
           destdir="target/classes"/>

    <zip destfile="target/inventory.jar">
      <zipfileset dir="src/main/resources"/>
      <zipfileset dir="target/classes"/>        
    </zip>
  </target>

</project>
