<?xml version="1.0" encoding="UTF-8"?>

<tc:tc-config xmlns:tc="http://www.terracotta.org/config">
  <clients>
    <logs>output/logs</logs>
  </clients> 
  
  <application>
    <dso>
      <roots>
        <root>
          <field-name>demoapp.SimpleSession.sessions</field-name>
        </root>
      </roots>
      <instrumented-classes>
        <include>
          <class-expression>demoapp..*</class-expression>
        </include>
      </instrumented-classes>
      <web-applications>
        <web-application>simplesession</web-application>
      </web-applications>
    </dso>
  </application>

</tc:tc-config>
