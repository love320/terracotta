<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>Performance Test Web Application</display-name>

  <distributable/>

  <servlet>
    <servlet-name>OrganicObjectGraphServlet</servlet-name>
    <servlet-class>com.tctest.performance.servlets.OrganicObjectGraphServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>WebAppServlet</servlet-name>
    <servlet-class>com.tctest.performance.servlets.WebAppServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SanityCheckServlet</servlet-name>
    <servlet-class>com.tctest.performance.servlets.SanityCheckServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LongRunningTestServlet</servlet-name>
    <servlet-class>com.tctest.performance.servlets.LongRunningTestServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>OrganicObjectGraphServlet</servlet-name>
    <url-pattern>/OrganicObjectGraphServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>WebAppServlet</servlet-name>
    <url-pattern>/WebAppServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SanityCheckServlet</servlet-name>
    <url-pattern>/SanityCheckServlet</url-pattern>
  </servlet-mapping>  
  <servlet-mapping>
    <servlet-name>LongRunningTestServlet</servlet-name>
    <url-pattern>/LongRunningTestServlet</url-pattern>
  </servlet-mapping>

  <!--   <session-config> -->
  <!--     <session-timeout>1</session-timeout> -->
  <!--   </session-config> -->
  
</web-app>
