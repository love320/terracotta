<project name="resolve-dependencies" default="run" xmlns:ivy="antlib:fr.jayasoft.ivy.ant">

	<property name="ivy.codebase.dir" value="${basedir}/../.."/>	
	<property name="ivy.conf.dir" value="${basedir}/../config"/>
	<property name="ivy.dependencies.dir" value="${ivy.codebase.dir}/dependencies/lib"/>
	<path id="ivy.lib.path">
		<fileset dir="${basedir}/../ivy" includes="*.jar"/>
	</path>
	<taskdef resource="fr/jayasoft/ivy/ant/antlib.xml" uri="antlib:fr.jayasoft.ivy.ant" classpathref="ivy.lib.path"/>

	<!-- ================================= 
	target: run              
	================================= -->
	<target name="run" depends="configure">
		<ant inheritRefs="true" antfile="build.xml" dir="${ivy.codebase.dir}/common" target="resolve"/>
	</target>
	
	<!-- ================================= 
	target: configure              
	================================= -->
	<target name="configure" description="--> configure ivy module repositories">
		<ivy:configure file="${ivy.conf.dir}/ivyconf.xml"/>
	</target>
	
</project>
