<tc:tc-config xmlns:tc="http://www.terracotta.org/config">
<clients>   
  <logs>/tmp/client-logs-%i</logs>
</clients>
<system>
   <configuration-model>production</configuration-model>
</system>
<servers>
      <server name="test01.terracotta.lan">
         <logs>/tmp</logs>
         <data>/tmp</data>
      </server>
</servers>
<application>
   <dso>                        <locks>
            <autolock>
               <lock-level>write</lock-level>
               <method-expression>* *..*.*(..)</method-expression>
            </autolock>
            <autolock>
               <method-expression>* com.tcsimulator.TestSpec..*(..)</method-expression>
               <lock-level>write</lock-level>
            </autolock>
            <autolock>
               <method-expression>* com.tcsimulator.ApplicationConfigImpl.*(..)</method-expression>
               <lock-level>write</lock-level>
            </autolock>
            <autolock>
               <lock-level>write</lock-level>
               <method-expression>* com.tcsimulator.TestStarter..*(..)</method-expression>
            </autolock>
            <autolock>
               <method-expression>* com.tcsimulator.ContainerBuilder.*(..)</method-expression>
               <lock-level>write</lock-level>
            </autolock>
            <autolock>
               <method-expression>* com.tcsimulator.ControlProviderImpl.*(..)</method-expression>
               <lock-level>write</lock-level>
            </autolock>
            <autolock>
               <lock-level>write</lock-level>
               <method-expression>* com.tcsimulator.ControlImpl.*(..)</method-expression>
            </autolock>
            <autolock>
               <method-expression>* EDU.oswego.cs.dl.util.concurrent.CyclicBarrier.*(..)</method-expression>
               <lock-level>write</lock-level>
            </autolock>
            <autolock>
               <lock-level>write</lock-level>
               <method-expression>* EDU.oswego.cs.dl.util.concurrent.CountDown.*(..)</method-expression>
            </autolock>
            <autolock>
               <lock-level>write</lock-level>
               <method-expression>* com.tcsimulator.DistributedGlobalIdGenerator..*(..)</method-expression>
            </autolock>
            <autolock>
               <method-expression>* com.tcsimulator.GlobalVmNameGenerator..*(..)</method-expression>
               <lock-level>write</lock-level>
            </autolock>
            <autolock>
               <method-expression>* com.tctest.longrunning.LongrunningGCTestApp.*(..)</method-expression>
               <lock-level>write</lock-level>
            </autolock>
            </locks>
            <roots>
               <root>
            <field-name>com.tcsimulator.TestSetup.testSpec</field-name>
            <root-name>testSpec</root-name>
               </root>
               <root>
            <field-name>com.tcsimulator.TestStarter.testSpec</field-name>
            <root-name>testSpec</root-name>
               </root>
               <root>
            <field-name>com.tcsimulator.TestStarter.statsOutputQueue</field-name>
            <root-name>statsOutputQueue</root-name>
               </root>
               <root>
            <field-name>com.tcsimulator.ContainerBuilder.testSpec</field-name>
            <root-name>testSpec</root-name>
               </root>
               <root>
            <root-name>statsOutputQueue</root-name>
            <field-name>com.tcsimulator.ContainerBuilder.statsOutputQueue</field-name>
               </root>
               <root>
            <field-name>com.tcsimulator.ControlProviderImpl.controls</field-name>
            <root-name>controls</root-name>
               </root>
               <root>
            <field-name>com.tcsimulator.DistributedGlobalIdGenerator.currentId</field-name>
            <root-name>DistributedGlobalIdGeneratorcurrentId</root-name>
               </root>
               <root>
            <root-name>currentId</root-name>
            <field-name>com.tcsimulator.GlobalVmNameGenerator.currentId</field-name>
               </root>
               <root>
            <field-name>com.tctest.longrunning.LongrunningGCTestApp.list</field-name>
            <root-name>LongrunningGCTestAppList</root-name>
               </root>
               <root>
            <field-name>com.tctest.longrunning.LongrunningGCTestAppCLI.barrier</field-name>
            <root-name>LongrunningGCTestAppCLIBarrier</root-name>
               </root>

            </roots>
            <instrumented-classes>
                        <include>
                              <class-expression>*..*</class-expression>
               <honor-transient>false</honor-transient>
                           </include>
                        <include>
                              <honor-transient>false</honor-transient>
               <class-expression>com.tcsimulator.TestSpec</class-expression>
                           </include>
                        <include>
                              <honor-transient>false</honor-transient>
               <class-expression>com.tcsimulator.ApplicationConfigImpl</class-expression>
                           </include>
                        <include>
                              <honor-transient>false</honor-transient>
               <class-expression>com.tcsimulator.TestStarter</class-expression>
                           </include>
                        <include>
                              <class-expression>com.tcsimulator.ContainerBuilder</class-expression>
               <honor-transient>false</honor-transient>
                           </include>
                        <include>
                              <class-expression>com.tcsimulator.ControlProviderImpl</class-expression>
               <honor-transient>false</honor-transient>
                           </include>
                        <include>
                              <honor-transient>false</honor-transient>
               <class-expression>com.tcsimulator.ControlImpl</class-expression>
                           </include>
                        <include>
                              <class-expression>EDU.oswego.cs.dl.util.concurrent.CyclicBarrier</class-expression>
               <honor-transient>false</honor-transient>
                           </include>
                        <include>
                              <honor-transient>false</honor-transient>
               <class-expression>EDU.oswego.cs.dl.util.concurrent.CountDown</class-expression>
                           </include>
                        <include>
                              <honor-transient>false</honor-transient>
               <class-expression>com.tcsimulator.DistributedGlobalIdGenerator</class-expression>
                           </include>
                        <include>
                              <class-expression>com.tcsimulator.GlobalVmNameGenerator</class-expression>
               <honor-transient>false</honor-transient>
                           </include>
                        <include>
                              <class-expression>com.tctest.longrunning.LongrunningGCTestApp</class-expression>
               <honor-transient>true</honor-transient>
                           </include>
                        <include>
                              <class-expression>com.tctest.longrunning.Tree</class-expression>
               <honor-transient>false</honor-transient>
                           </include>
            </instrumented-classes>
</dso>
</application>
</tc:tc-config>
