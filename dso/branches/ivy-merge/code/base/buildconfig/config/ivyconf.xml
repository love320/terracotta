<ivyconf>
  <conf defaultResolver="ibiblio-chain"/>
  <resolvers>
    <url name="tc-repo">
      <artifact pattern="http://eellispc.terracotta.lan/~eellis/lib/[artifact]-[revision].[ext]"/>
    </url>
    <url name="tc-repo-eclipse">
      <artifact pattern="http://eellispc.terracotta.lan/~eellis/eclipse-api/[artifact]-[revision].[ext]"/>
    </url>
    <chain name="ibiblio-chain" returnFirst="true">
      <ibiblio name="ibiblio" />
      <url name="tc-mirror">
      	<artifact pattern="http://eellispc.terracotta.lan/~eellis/mirror/[artifact]-[revision].[ext]"/>
      </url>
    </chain>
  </resolvers>
  <modules>
	<module organisation="terracotta" name=".*" resolver="tc-repo"/>
	<module organisation="tc-eclipse" name=".*" resolver="tc-repo-eclipse"/>
  </modules>
</ivyconf>
