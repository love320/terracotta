<?xml version="1.0"?><project>
  <parent>
    <groupId>org.terracotta.plugins</groupId>
    <artifactId>tc-plugins</artifactId>
    <version>1.0.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.terracotta.plugins</groupId>
  <artifactId>clustered-awt</artifactId>
  <name>Clustered AWT</name>
  <version>1.4</version>
  <packaging>jar</packaging>
  <url>http://www.terracotta.org/</url>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <index>false</index>
            <manifest/>
            <manifestEntries>
              <Bundle-Activator>org.terracotta.plugins.instrumentation.awt.AWTTerracottaInstrumentation</Bundle-Activator>
              <Bundle-Category>terracotta</Bundle-Category>
              <Bundle-Copyright>Terracotta, Inc. (c) 2003-2007</Bundle-Copyright>
              <Bundle-Description>Terracotta instrumentation for clustering java.awt.*</Bundle-Description>
              <Bundle-ManifestVersion>2</Bundle-ManifestVersion>
              <Bundle-Name>Terracotta AWT Instrumentation</Bundle-Name>
              <Bundle-RequiredExecutionEnvironment>J2SE-1.4</Bundle-RequiredExecutionEnvironment>
              <Bundle-SymbolicName>${pom.groupId}.${pom.artifactId}</Bundle-SymbolicName>
              <Bundle-Vendor>Terracotta, Inc.</Bundle-Vendor>
              <Bundle-Version>${pom.version}</Bundle-Version>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>osgi_R4_core</artifactId>
      <version>1.0</version>
    </dependency>
  </dependencies>
</project>
