  <profiles>
    <profile>
      <id>start-server</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.2.1</version>
            <configuration>
              <executable>${java.home}/bin/java</executable>
              <arguments>
                <argument>-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=${debugPort}</argument>
                <argument>-Xms512m</argument>
                <argument>-Xmx512m</argument>
                <argument>-XX:+HeapDumpOnOutOfMemoryError</argument>
                <argument>-Dcom.sun.management.jmxremote</argument>
                <argument>-XX:MaxDirectMemorySize=650m</argument>
                <argument>-Dcom.tc.management.war=${basedir}/../management-agent/management-tsa-war/target/management-tsa-war-${project.version}.war</argument>
                <argument>-Dsun.rmi.dgc.server.gcInterval=31536000</argument>
                <argument>-Djava.awt.headless=true</argument>
                <argument>-Dcom.tc.productkey.path=${user.home}/.tc/terracotta-license.key</argument>
                <argument>-XX:MaxDirectMemorySize=8G</argument>
                <argument>-Djava.net.preferIPv4Stack=true</argument>
                <!--                <argument>-DSecretProvider.secret=lala</argument> -->
                <argument>-Dtc.ssl.trustAllCerts=true</argument>
                <argument>-Dtc.ssl.disableHostnameVerifier=true</argument>
                <argument>-Dtc.keychain.detectFileChanges=true</argument>

                <argument>-classpath</argument>
                <classpath/>
                <argument>com.tc.server.TCServerMain</argument>

                <!-- mvn exec:exec -Pstart-server -Dnodeid=tsa_[1,2]_[1,2] -->
                <argument>-f</argument>
                <argument>${configFile}</argument>
                <argument>-n</argument>
                <argument>${nodeId}</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>stop-server</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <configuration>
              <executable>${java.home}/bin/java</executable>
              <arguments>
                <argument>-classpath</argument>
                <classpath/>
                <argument>com.tc.admin.TCStop</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>dev-console</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <configuration>
              <executable>${java.home}/bin/java</executable>
              <arguments>
                <argument>-classpath</argument>
                <classpath/>
                <argument>com.tc.admin.AdminClient</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
