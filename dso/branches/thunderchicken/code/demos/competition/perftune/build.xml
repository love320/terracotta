<project name="perftune" default="build" basedir=".">
   <property name="src.dir" location="src"/>
   <property name="build.dir" location="classes"/>
   <property name="lib.dir" location="lib"/>
   <property name="dashboard.jar" location="${lib.dir}/dashboard.jar" />

   <target name="init">
      <mkdir dir="${build.dir}"/>
   </target>

   <target name="build" depends="init" description="compile the source">
      <javac target="1.5" source="1.5" srcdir="${src.dir}" destdir="${build.dir}"  
         classpath="lib/log4j-1.2.15.jar:lib/commons-logging.jar:lib/commons-lang-2.4.jar" />
      <zip destfile="${dashboard.jar}">
         <zipfileset dir="${build.dir}" />        
      </zip>
   </target>

   <target name="clean" description="clean up">
      <delete dir="${build.dir}" />
      <delete file="${dashboard.jar}" />
   </target>
</project>
